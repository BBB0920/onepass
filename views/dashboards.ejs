<!DOCTYPE html>
<html lang="en">

<head>
  <title>Dashboard</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/public.css" />
  <link rel="stylesheet" href="/styles/new-form.css" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/dashboards.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>


</head>

<%- include('partials/_header'); %>

<body>
  <div class="topbar">
    <h1 class="display-5 fw-bold lh-1 mb-3">Your Dashboard</h1>
    <button class="new-pwd-btn btn btn-primary">Add New Password</button>
  </div>
  <br>
    <% info.forEach(passwords => { %>
      <div>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">
              <p><a href= <%= passwords.login_url %> class="pe-auto"> <%= passwords.name %></a></p>
            </h5>
            <p class="card-text">
              <span>Username: <%= passwords.username %></span><br>
              <span>Password: </span>
              <span class = "password"><%= passwords.password %></span>
            </p>
            <div class = "buttons">
              <button class = "edit-btn btn btn-primary" data-id=<%= passwords.id%>>Edit</button>
              <button class = "delete-btn btn btn-primary" data-id="<%= passwords.id%>">Delete</button>
              <button class = "copy-btn btn btn-primary" data-id="<%= passwords.id%>">Copy</button>
            </div>
          </div>
        </div>
        <br>
        <!-- <p><a href= <%= passwords.login_url %> class="pe-auto"> <%= passwords.name %></a></p>
        <span><%= passwords.username %></span>
        <span class = "password"><%= passwords.password %></span>
        <button class = "edit-btn" data-id="<%= passwords.id%>">Edit</button>
        <button class = "delete-btn" data-id="<%= passwords.id%>">Delete</button>
        <button class = "copy-btn" data-id="<%= passwords.id%>">Copy</button> -->
      </div>
    <% }) %>
  </div>
</body>

</html>
